<%# if current_user %>
  <figure class="album">
    <img src="data:image/gif;base64,R0lGODlhAQABAAD/ACwAAAAAAQABAAACADs=" alt="<%= @album.title %>" data-artist="<%= @album.artist %>">
  </figure>
  <%= form_for(@album) do |f| %>
    <% if @album.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@album.errors.count, "error") %> prohibited this album from being saved:</h2>

        <ul>
        <% @album.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :artist %><br>
      <%= f.text_field :artist %>
    </div>
    <div class="field">
      <%= f.label :host %><br>
      <%= f.text_field :host %>
    </div>
    <div class="field">
      <%#= f.label :played_on %><br>
      <%#= f.date_select :played_on, order: [:day, :month, :year] %>
    </div>
    <div class="field">
      <%#= f.label :release_date %><br>
      <%#= f.date_select :release_date, order: [:day, :month, :year], start_year: 1920  %>
    </div>
    <!-- <div class="field">
      <%#= f.label :release_date %><br>
      <%#= f.date_select :release_date, order: [:day, :month, :year], start_year: 1920  %>
    </div> -->
    <%= f.fields_for :tracks do |builder| %>
      <%= render 'track_fields', f: builder %>
    <% end %>
    <button onclick="processScroll(writeFields);return false">Get tracks</button>
    <%= template_to_add_fields f, :tracks %>
    <%= link_to_add_fields "Add Track", f, :tracks %>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
<%# end %>
