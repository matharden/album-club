= simple_form_for(@album) do |f|
  - if @album.errors.any?
    #error_explanation
      %h2
        = pluralize(@album.errors.count, "error")
        prohibited this album from being saved:
      %ul
        - @album.errors.full_messages.each do |msg|
          %li= msg

  = f.input :title
  = f.input :artist
  = f.input :host
  = f.input :played_on

  .actions
    = f.submit
